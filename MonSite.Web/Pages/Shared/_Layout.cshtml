<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - MonSite.Web</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>

<body class="min-h-screen flex flex-col" style="background-image: url('photo_fond.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center;">
<header class="fixed top-0 left-0 w-full bg-[#17202a] z-50 flex items-center justify-between px-10 py-4 shadow-md">
    <a asp-page="/Index">
        <img src="logoArthurBailly.png" alt="Logo" class="w-10 h-10 object-contain" />
    </a>

    @{
        var currentPage = ViewContext.ActionDescriptor?.RouteValues["page"];
        Console.WriteLine(currentPage+" lsdknvsdlkhvm");
    }

    <nav class="flex space-x-8">


        <a asp-page="/Index" class="text-sm text-white pb-2 border-b-2 transition-all  hover:opacity-80 duration-200 @(currentPage == "/Index" ? "border-white font-bold" : "border-transparent hover:border-gray-200")">Home</a>
        <a asp-page="/Index" class="text-sm text-white pb-2 border-b-2 transition-all hover:opacity-80 duration-200 @(currentPage == "/Realisation" ? "border-white font-bold" : "border-transparent hover:border-gray-200")">Réalisations</a>
        <a asp-page="/Index" class="text-sm text-white pb-2 border-b-2 transition-all hover:opacity-80 duration-200 @(currentPage == "/Contact" ? "border-white font-bold" : "border-transparent hover:border-gray-200")">Contact</a>
        <a asp-page="/Index" class="text-sm text-white pb-2 border-b-2 transition-all hover:opacity-80 duration-200 @(currentPage == "/Connexion" ? "border-white font-bold" : "border-transparent hover:border-gray-200")">Connexion</a>
        <a href="https://www.linkedin.com/in/ton-profil" target="_blank" class="text-white hover:opacity-80">
            <i class="fab fa-linkedin fa-lg"></i>
        </a>

    </nav>
</header>

<!-- Ajout d'un padding-top pour ne pas cacher le contenu sous le header -->
<div class="flex-grow pt-24">
    <main role="main" class="container mx-auto">
        @RenderBody()
    </main>
</div>

<footer class="text-center text-sm text-gray-400 py-4 border-t">
    <div class="container mx-auto">
        &copy; 2025 - MonSite.Web - <a asp-area="" asp-page="/Privacy" class="underline hover:text-gray-200">Privacy</a>
    </div>
</footer>
</body>
</html>